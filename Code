--// SPEED ghosts (ROBLOX)
--// Vers칚o oficial
 
-- Configura칞칚o inicial
local maxSpeed = 325 -- velocidade m치xima
local enabled = false
 
-- Interface Gr치fica (um bot칚o azul "ghosts", fundo preto, fantasmas 游놑 pequenos e aleat칩rios)
local player = game.Players.LocalPlayer
 
-- Cria o ScreenGui apenas se n칚o existir
local screenGui = player.PlayerGui:FindFirstChild("SpeedGhostsGui") or Instance.new("ScreenGui")
screenGui.Name = "SpeedGhostsGui"
screenGui.Parent = player.PlayerGui
 
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 160, 0, 54)
mainFrame.Position = UDim2.new(0, 30, 0, 100)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- fundo preto
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui
 
-- Fun칞칚o correta para criar fantasmas 游놑 pequenos em posi칞칫es aleat칩rias
local ghostCount = 7 -- quantidade de fantasmas no fundo
local frameWidth = mainFrame.Size.X.Offset
local frameHeight = mainFrame.Size.Y.Offset
 
for i = 1, ghostCount do
    local ghost = Instance.new("TextLabel")
    ghost.Size = UDim2.new(0, 18, 0, 18)
    ghost.BackgroundTransparency = 1
    ghost.Text = "游놑"
    ghost.TextColor3 = Color3.fromRGB(70, 70, 90) -- fantasma discreto
    ghost.Font = Enum.Font.SourceSansBold
    ghost.TextSize = 18
    ghost.ZIndex = 9
    -- Posi칞칚o aleat칩ria dentro do mainFrame (ajustada para n칚o sair fora)
    local x = math.random(0, frameWidth - 18)
    local y = math.random(0, frameHeight - 18)
    ghost.Position = UDim2.new(0, x, 0, y)
    ghost.Parent = mainFrame
end
 
-- Bot칚o transparente, texto azul "ghosts", troca para 游놑 quando ativado
local ghostsButton = Instance.new("TextButton")
ghostsButton.Size = UDim2.new(1, -14, 1, -14)
ghostsButton.Position = UDim2.new(0, 7, 0, 7)
ghostsButton.Text = "ghosts"
ghostsButton.BackgroundTransparency = 1 -- transparente para mostrar os fantasmas
ghostsButton.TextColor3 = Color3.fromRGB(20, 110, 255) -- azul forte
ghostsButton.Font = Enum.Font.SourceSansBold
ghostsButton.TextSize = 28
ghostsButton.ZIndex = 11
ghostsButton.Parent = mainFrame
 
mainFrame.ZIndex = 10
screenGui.DisplayOrder = 1000
 
ghostsButton.MouseButton1Click:Connect(function()
    enabled = not enabled
    if enabled then
        ghostsButton.Text = "游놑"
        ghostsButton.TextColor3 = Color3.fromRGB(20, 110, 255)
    else
        ghostsButton.Text = "ghosts"
        ghostsButton.TextColor3 = Color3.fromRGB(20, 110, 255)
        -- Resetar velocidade ao padr칚o
        if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
            player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = 16
        end
    end
end)
 
-- Loop para aplicar speed m치xima
game:GetService("RunService").RenderStepped:Connect(function()
    if enabled and player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
        player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = maxSpeed
    end
end)
 
-- Por: Copilot - SPEED ghosts oficial
